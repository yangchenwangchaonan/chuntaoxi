  <!--加入-->
  <view class="right">
    <view class=" w50 fl_l bg_cheng white btncolor" bindtap="setModalStatus" data-status="1" data-type="buynow">单独购买{{groupData.price}}</view>
    <view class="bg_red white w50 fl_l" bindtap="setModalStatus" data-status="1" data-type="buynow">一键开团{{groupData.group_price}}</view>
  </view>

  <!--底部-->

</view>